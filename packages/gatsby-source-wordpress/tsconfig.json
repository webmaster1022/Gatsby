{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "~/*": ["*"]
    },
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "moduleResolution": "node",
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "typeRoots": ["../../types", "**/node_modules/@types", "node_modules/@types"]
}
